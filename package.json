{
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "css-loader": "^3.4.2",
    "html-webpack-plugin": "^3.2.0",
    "htmlint": "0.0.7",
    "husky": "^4.2.3",
    "json5-loader": "^3.0.0",
    "lint-staged": "^10.0.8",
    "live-server": "^1.2.1",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "serve": "live-server dist",
    "serve:src": "webpack-dev-server --mode development",
    "prettier": "prettier **/*.{js,html,css,scss,md,ts,json} --write",
    "lint:html": "htmlint",
    "build:dev": "npm run lint:html && webpack --mode development",
    "build:prod": "npm run lint:html && webpack --mode production",
    "watch:scss": "nodemon --ext scss --exec npm run build:scss"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html}": "htmlint",
    "*.{js,html,css,scss,md,ts,json}": "prettier --write"
  }
}
